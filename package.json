{
  "name": "auth-app",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:network": "vite --host",
    "start:network": "node scripts/start-network-server.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:ui": "vitest --ui",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run src/test/*.integration.test.js",
    "test:unit": "vitest run src/**/__tests__/**/*.test.jsx",
    "test:e2e": "echo 'E2E tests not configured yet'",
    "test:all": "node scripts/comprehensive-test-runner.js",
    "test:quick": "npm run test:unit && npm run test:integration",
    "test:legacy": "node scripts/test-runner.js",
    "lint": "eslint src --ext js,jsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext js,jsx --fix",
    "setup-db": "node scripts/setup-database.js",
    "setup-db-with-data": "node scripts/setup-database.js --init-data",
    "create-test-users": "node scripts/create-test-users.js",
    "create-test-users:dry-run": "node scripts/create-test-users.js --dry-run",
    "create-test-users:force": "node scripts/create-test-users.js --force",
    "migrate-users": "node scripts/migrate-users-to-companies.js",
    "migrate-users:dry-run": "node scripts/migrate-users-to-companies.js --dry-run",
    "migrate-users:force": "node scripts/migrate-users-to-companies.js --force",
    "init-migration-data": "node scripts/init-migration-test-data.js",
    "deploy-rules": "firebase deploy --only firestore:rules",
    "deploy-indexes": "firebase deploy --only firestore:indexes",
    "deploy-functions": "firebase deploy --only functions",
    "deploy-all": "firebase deploy",
    "setup-email": "node scripts/setup-email-config.js",
    "setup-email:show": "node scripts/setup-email-config.js --show",
    "test-email": "firebase functions:shell",
    "test-integrations": "node scripts/test-integrations.js",
    "test-integrations:verbose": "node scripts/test-integrations.js --verbose",
    "validate-integrations": "node scripts/validate-integrations.js",
    "integration-check": "npm run validate-integrations && npm run build",
    "vercel-build": "npm run build"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.10",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^1.3.1",
    "@vitest/ui": "^1.3.1",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "postcss": "^8.5.5",
    "tailwindcss": "^4.1.10",
    "vite": "^6.3.5",
    "vite-plugin-pwa": "^1.0.0",
    "vitest": "^1.3.1",
    "workbox-window": "^7.3.0"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.0",
    "firebase": "^11.9.1",
    "firebase-admin": "^13.4.0",
    "firebase-functions": "^6.3.2",
    "jspdf": "^3.0.1",
    "jspdf-autotable": "^5.0.2",
    "nodemailer": "^7.0.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2",
    "recharts": "^2.15.3",
    "tailwind-merge": "^2.2.1"
  }
}
